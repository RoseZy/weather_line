<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <com.example.apple.weather_line.WeatherLineChart
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/myLineChart"
        android:layout_centerInParent="true"
        android:background="@color/lineChartColor"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:MaxLineColor="@color/colorPrimaryDark"
        app:MinLineColor="@color/colorAccent"
        app:CircleTextSize="15sp"
        app:CircleTextColor="@color/colorPrimary"
        app:CircleColor="#ffffff"
        app:ChartAlpha="255"/>

</RelativeLayout>